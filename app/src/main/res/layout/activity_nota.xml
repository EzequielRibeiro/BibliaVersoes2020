<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_nota"
        android:divider="@drawable/divider">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAnoId"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewData"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewAssunto"
                android:layout_toEndOf="@+id/textViewAssunto"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:background="#c0a45a" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/buttonExcluiNota"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textViewTexto"
                android:layout_toEndOf="@+id/textViewTexto"
                android:background="@drawable/close" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAssunto"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTexto"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewData"
            android:layout_toEndOf="@+id/textViewData"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</RelativeLayout>
