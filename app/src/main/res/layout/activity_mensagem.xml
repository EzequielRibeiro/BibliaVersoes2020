<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idLayoutDevoBase"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/linearMobDevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:background="@android:color/black"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/idMob"></com.google.android.gms.ads.AdView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutXMLBrowser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout11"
        android:layout_below="@+id/linearMobDevo"
        android:layout_alignParentLeft="false"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayoutWeb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <WebView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/webViewBrowser"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barrinha"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDeveloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:autoText="false"
            android:text="000000"
            android:textColor="#c33f3e41"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>

