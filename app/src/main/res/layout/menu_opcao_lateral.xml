<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:id="@+id/layout_main_lateral_container"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="left">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:weightSum="1">

            <TextView
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:text="E sede cumpridores da palavra, e não somente ouvintes, enganando-vos a vós mesmos. Tiago 1:22"
                android:id="@+id/textView25"
                android:layout_weight="0.52"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail"
                android:id="@+id/textView24"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:singleLine="true" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView4"
            android:paddingTop="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_favorito"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView12"
                        android:background="@mipmap/star_cinza"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoText="false"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Favorito"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical" />
                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button6"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_anotacao"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView9"
                        android:background="@mipmap/nota"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoText="false"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Anotação"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button5"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_dicionario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/imageView4"
                        android:background="@drawable/dicionario"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoText="false"
                        android:gravity="left|center_vertical"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Dicionário"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:padding="0dp" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_online"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView5"
                        android:background="@drawable/globe"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:gravity="left|center_vertical"
                        android:height="20dp"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Online"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button2"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_estatistica"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView6"
                        android:background="@drawable/graphi2"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:height="20dp"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Desempenho"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button3"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_informacao"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView8"
                        android:src="@drawable/info"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView23"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:height="20dp"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Informação"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"
                        tools:ignore="RtlCompat" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/button4"
                    android:layout_gravity="center_horizontal"
                    android:text="______________________________" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:id="@+id/layout_configuracao"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView7"
                        android:background="@drawable/settings2"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView16"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:height="20dp"
                        android:layout_above="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Configuração"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="invisible"></LinearLayout>

    </LinearLayout>

</LinearLayout>
