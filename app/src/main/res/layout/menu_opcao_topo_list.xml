<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hiddenLayoutTopo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#787676"
    android:gravity="center"
    android:theme="@style/Theme.Transparente">
    <LinearLayout
        android:id="@+id/linearLayoutTopSpinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner4"
            style="@style/Platform.Widget.AppCompat.Spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/spinner5"
            style="@style/Platform.Widget.AppCompat.Spinner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"

            android:gravity="top" />

        <Spinner
            android:id="@+id/spinner6"
            style="@style/Platform.Widget.AppCompat.Spinner"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="top" />

        <Button
            android:id="@+id/buttonChamarLivro"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_next"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutTopBuscar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTopSpinner">

        <EditText
            android:id="@+id/editTextPesquisarList"
            style="EditTextAppTheme"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="left"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBuscarList"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/lupa2"
            android:singleLine="true"
            android:layout_marginRight="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

