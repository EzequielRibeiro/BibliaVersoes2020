<resources>

    <style name="ProgressBarStyle" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FullScreen"  parent="android:Theme.NoTitleBar.Fullscreen">

    </style>


    <style name="Theme.Apptheme"  parent="@style/Theme.AppCompat.DayNight.DarkActionBar">

        <item name="android:background">@color/white</item>

    </style>

      <style name="PreferencesTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="android:textColorPrimary">@color/dark</item>

     </style>


    <style name="SpinnerItemStyle">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>


    <style name="WebViewStyleNoturno">
       <item name="android:textColor">@color/cyan</item>
       <item name="android:background">@color/dark</item>
    </style>

    <style name="Theme.Transparente"
        parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="SpinnerTheme" parent="ListViewSpinnerTheme">
        <item name="android:background">@color/common_signin_btn_light_text_pressed</item>
        <item name="android:dropDownSelector">@color/common_signin_btn_light_text_pressed</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Changes the spinner drop down item radio button style -->
    <style name="DropDownItemSpinnerTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="ListViewSpinnerTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@color/common_signin_btn_light_text_pressed</item>
    </style>

    <style name="ListViewSpinnerTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@color/common_signin_btn_light_text_pressed</item>
    </style>

    <style name="SpinnerItemTheme"
        parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>




</resources>
